<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfoodmain"
    tools:context="com.dungnguyen.user.SignUp">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_marginTop="50dp"
            android:src="@drawable/foodlogo3"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>
        <EditText
            android:background="@drawable/eddittext_style"
            android:id="@+id/edtPasswordSU"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:layout_margin="8dp"
            android:background="@drawable/eddittext_style"
            android:id="@+id/edtRePasswordSU"
            android:hint="Reenter Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtRePasswordSU"
            android:background="@drawable/button_style_sign_up"
            android:text="Tiếp Tục"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
