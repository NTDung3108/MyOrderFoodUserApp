<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="230dp"
    android:layout_height="310dp"
    >
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:background="@drawable/recycler_bg"
        android:layout_margin="8dp">
        <ImageView
            android:id="@+id/recommended_image"
            android:layout_width="210dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/humbeger"
            />

        <TextView
            android:id="@+id/recommended_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Humburger"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@+id/recommended_image"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_mdi_star_rate"
            android:layout_below="@+id/recommended_name"/>

        <TextView
            android:id="@+id/recommended_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:text="4.5"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_below="@+id/recommended_name"
            android:layout_toEndOf="@id/imageView3"/>

        <TextView
            android:id="@+id/recommended_price"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/text_price"
            android:gravity="center_vertical"
            android:text="250.000 Ä‘"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/recommended_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/recommended_image"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/recommended_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/recommended_image"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@+id/recommended_favorite"/>

    </RelativeLayout>
</RelativeLayout>
