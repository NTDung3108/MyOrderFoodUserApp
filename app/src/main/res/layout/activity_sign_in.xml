<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgfoodmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dungnguyen.user.SignIn">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:src="@drawable/foodlogo3"
            android:layout_width="wrap_content"
            android:layout_height="150dp" />

        <EditText
            android:text=""
            android:layout_marginTop="20dp"
            android:background="@drawable/eddittext_style"
            android:id="@+id/edtPhone"
            android:hint="Số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            />
        <EditText
            android:text=""
            android:layout_marginTop="10dp"
            android:background="@drawable/eddittext_style"
            android:id="@+id/edtPasswordSignIn"
            android:hint="Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            />
        <CheckBox
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:id="@+id/ckbRemember"
            android:text="Nhớ tài khoản"
            android:textColor="#B71C1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <Button
                android:text="Đăng nhập"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btnSignIn"
                android:layout_margin="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:shadowColor="@android:color/black"
                android:background="@drawable/button_style_sign_up"
                />
            <Button
                android:text="Đăng nhập bằng OTP"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btnSignInOTP"
                android:layout_margin="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:shadowColor="@android:color/black"
                android:background="@drawable/button_style_sign_up"
                />
        </LinearLayout>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/txtForgot"
            android:gravity="center"
            android:textColor="#EA080E"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:text="@string/gach"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

</RelativeLayout>
