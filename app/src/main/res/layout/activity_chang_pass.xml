<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfoodmain"
    tools:context="com.dungnguyen.user.ChangPass">
    <ImageView
        android:layout_marginTop="50dp"
        android:src="@drawable/foodlogo3"
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/layoutCP"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_margin="8dp"
            android:background="@drawable/eddittext_style"
            android:id="@+id/edtPassword"
            android:hint="Mật khẩu mới"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            />
        <EditText
            android:layout_margin="8dp"
            android:background="@drawable/eddittext_style"
            android:id="@+id/edtRePassword"
            android:hint="Nhập lại mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/layoutCP"
        android:layout_weight="1"
        android:background="@drawable/button_style_sign_up"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white" />

</RelativeLayout>
