<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity"
    android:background="@drawable/bgfoodmain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_baseline_add_24"
                android:background="#CFCFCF"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Thêm ảnh đại diện"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên tên: "
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <EditText
            android:layout_margin="8dp"
            android:id="@+id/edtFullName"
            android:hint="Full name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/eddittext_style"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: "
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edtSignupDate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/eddittext_style"
            android:layout_centerHorizontal="true"
            android:hint="Chọn Ngày ..."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:focusable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại đồ ăn ưa thích: "
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <Spinner
            android:id="@+id/spSignFavorite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/eddittext_style"/>
        <Button
            android:id="@+id/btnCompleted"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hoàn tất"
            android:textColor="@color/white"
            android:background="@drawable/button_style_sign_in"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>